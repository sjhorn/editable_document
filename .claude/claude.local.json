{
  "description": "Claude Code settings for the editable_document Flutter package",
  "version": "1",

  "permissions": {
    "allow": [
      "Bash(flutter analyze)",
      "Bash(flutter test*)",
      "Bash(flutter test --update-goldens*)",
      "Bash(dart format*)",
      "Bash(dart doc*)",
      "Bash(dart pub get)",
      "Bash(dart pub upgrade*)",
      "Bash(dart run benchmark/*)",
      "Bash(git add -p)",
      "Bash(git add lib/* test/* integration_test/* benchmark/* doc/* example/*)",
      "Bash(git commit*)",
      "Bash(git status)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git stash*)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(ls *)",
      "Bash(mkdir -p *)",
      "Bash(touch *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Read(*)",
      "Write(lib/**)",
      "Write(test/**)",
      "Write(integration_test/**)",
      "Write(benchmark/**)",
      "Write(doc/**)",
      "Write(example/**)",
      "Write(analysis_options.yaml)",
      "Write(pubspec.yaml)",
      "Write(README.md)",
      "Write(CHANGELOG.md)",
      "Write(ROADMAP.md)",
      "Write(.github/**)",
      "Write(Makefile)"
    ],
    "deny": [
      "Bash(git push*)",
      "Bash(git force*)",
      "Bash(dart pub publish*)",
      "Bash(flutter pub publish*)",
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Write(.claude/**)",
      "Write(CLAUDE.md)"
    ]
  }
}